<clientConfig version="1.1">
  <emailProvider id="librechat.net">
    <domain>librechat.net</domain>
    <displayName>LibreChat E-mail</displayName>
    <displayShortName>LibreChat</displayShortName>
    <incomingServer type="imap">
      <hostname>w017f238.kasserver.com</hostname>
      <port>993</port>
      <socketType>SSL</socketType>
      <authentication>password-cleartext</authentication>
      <username>%EMAILADDRESS%</username>
    </incomingServer>
    <incomingServer type="pop3">
      <hostname>w017f238.kasserver.com</hostname>
      <port>995</port>
      <socketType>SSL</socketType>
      <authentication>password-cleartext</authentication>
      <username>%EMAILADDRESS%</username>
    </incomingServer>
	<outgoingServer type="smtp">
      <hostname>w017f238.kasserver.com</hostname>
      <port>587</port>
      <socketType>STARTTLS</socketType>
      <authentication>password-cleartext</authentication>
      <username>%EMAILADDRESS%</username>
    </outgoingServer>
    <documentation url="http://autoconfig.librechat.net/">
      <descr lang="en">LibreChat Mail program settings</descr>
    </documentation>
  </emailProvider>
</clientConfig>
